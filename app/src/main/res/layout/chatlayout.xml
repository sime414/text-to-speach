<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp">


 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     >

     <TextView
         android:id="@+id/text"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="what is yout name"
         android:textSize="22sp"
         android:textColor="#000"
         android:paddingTop="20dp"
         android:paddingBottom="20dp"
         android:paddingLeft="7dp"
         android:fontFamily="@font/t5"

         />

     <TextView
         android:id="@+id/language_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Bangla"
         android:layout_marginRight="7dp"
         android:layout_alignParentRight="true"
         android:layout_marginTop="3dp"
         android:textColor="#000"
         android:fontFamily="@font/t5"

         />

     <ImageView
         android:id="@+id/flag_text"
         android:layout_width="30dp"
         android:layout_height="10dp"
         android:src="@drawable/usa"
         android:layout_toLeftOf="@+id/language_text"
         android:layout_marginTop="8dp"
         />

 </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F97F51"

        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:rotation="90"
            android:src="@drawable/next" />

        <TextView
            android:id="@+id/ortho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="what is yout name"
            android:textColor="#000"
            android:textSize="22sp"
            android:visibility="visible"
            android:fontFamily="@font/t5"
            />

        <TextView
            android:id="@+id/language_ortho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bangla"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:textColor="#000"
            android:fontFamily="@font/t5"


            />

        <ImageView
            android:id="@+id/flag_ortho"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:src="@drawable/usa"
            android:layout_toLeftOf="@+id/language_ortho"
            android:layout_marginTop="8dp"
            />




    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F97F51"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="1dp"

            >

         <ImageView
             android:id="@+id/sound"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:src="@drawable/sound"
             android:padding="10dp"
             android:clickable="true"
             android:foreground="?attr/selectableItemBackground"
             />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="15dp"

            >

            <ImageView
                android:id="@+id/copy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/copy"
                android:padding="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="15dp"

            >

            <ImageView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/share"
                android:padding="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="30dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="15dp"

            >

            <ImageView
                android:id="@+id/love"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/love"
                android:padding="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                />
        </androidx.cardview.widget.CardView>



    </LinearLayout>






</LinearLayout>